{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "types": ["node", "aws-lambda"]
  },
  "include": ["index.ts", "../shared/*.ts"],
  "exclude": ["node_modules", "dist", "../shared/__tests__", "__tests__"]
}
