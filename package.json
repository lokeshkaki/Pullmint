{
  "name": "pullmint",
  "version": "0.1.0",
  "description": "AI-powered pull request analysis and automation for GitHub workflows",
  "private": true,
  "workspaces": [
    "infrastructure",
    "services/*",
    "services/llm-agents/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "deploy": "cd infrastructure && npm run deploy",
    "deploy:all": "cd infrastructure && npm run deploy:all"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "pr-automation",
    "code-review",
    "ai",
    "llm",
    "github",
    "ci-cd",
    "serverless",
    "aws"
  ],
  "author": "Lokesh Kaki",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lokeshkaki/pullmint.git"
  }
}
